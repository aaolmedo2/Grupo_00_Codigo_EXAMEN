                    <span>Clientes</span>
                </a>
            </li>

            @*Nav Item - Utilities Collapse Menu*@
            <li class="nav-item">
                @* @Html.ActionLink("Proveedores", "Index", "Proveedors", new { area = "" }, new { @class = "nav-link" })*@
                <a class="nav-link" href="@Url.Action("Index", "Proveedors")">
                    <i class="fas fa-users"></i>
                    <span>Proveedores</span>
                </a>
            </li>

            @*Nav Item - Utilities Collapse Menu*@
            <li class="nav-item">
                @*@Html.ActionLink("Productos", "Index", "Productos", new { area = "" }, new { @class = "nav-link" })*@
                <a class="nav-link" href="@Url.Action("Index", "Productos")">
                    <i class="fa-solid fa-bag-shopping"></i>
                    <span>Productos</span>
