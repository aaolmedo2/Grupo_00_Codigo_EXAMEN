                    <i class="fa-solid fa-bag-shopping"></i>
                    <span>Registrar</span>
                </a>
            </li>-->
            @*<li class="nav-item active"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>*@
        </ul>
    }
}
else
{
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
        <!-- Sidebar - Brand -->
        @Html.ActionLink("TIENDA VIRTUAL", "Index", "Home", new { area = "" }, new { @class = "sidebar-brand d-flex align-items-center justify-content-center" })
        <!-- Divider -->
        <hr class="sidebar-divider my-0">
        @if (User.IsInRole("Administrador"))
        {
            <li class="nav-item active">@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        }
        else
        {
            <li class="nav-item active">@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
        }
    </ul>
}

