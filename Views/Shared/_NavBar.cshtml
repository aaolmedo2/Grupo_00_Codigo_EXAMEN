@using Microsoft.AspNet.Identity
@using System.Web.Mvc
@*Libs necesarias para las sessiones*@
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@using PyoyectoTest.Models


@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

            <!-- Sidebar Toggle (Topbar) -->
            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                <i class="fa fa-bars"></i>
            </button>

            <!-- Topbar Navbar -->
            <ul class="navbar-nav ml-auto">
                @*------------------Creacion de sessiones---------------------------*@
                @*VARIABLE DE SESSION*@
                @{
                    var idusuario = User.Identity.GetUserId();

                    ApplicationDbContext db = new ApplicationDbContext();
                    var usermanager = new UserManager<ApplicationUser>(new UserStore<ApplicationUser>(db));

                    var objuser = usermanager.FindById(idusuario);

                    HttpContext.Current.Session["User"] = objuser; //obtiene el usuario logueado y lo guarda en una variable de session


                    var nombre = objuser.UserName;
                    var info = objuser.PhoneNumber;

                }


                @if (User.IsInRole("Cliente"))
                {
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="@Url.Action("Create", "Pedidos")" role="button">
                            <i class="fa fa-cart-shopping"></i>
                        </a>
                    </li>
                }


            <li class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                <p>Mathius Moyano - Angelo Olmedo - GRUPO 5</p>
            </li>

                <div class="topbar-divider d-none d-sm-block"></div>

                <!-- Nav Item - User Information -->
                <li class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                            @*Hola @User.Identity.GetUserName()!*@
                            Hola @nombre!
                            @* @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new {  })*@
                        </span>
                        @*<img class="img-profile rounded-circle"
                            src="img/undraw_profile.svg">*@

                    </a>
                    <!-- Dropdown - User Information -->
                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                         aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="@Url.Action("Index", "Manage")">
                            <!-- light style -->
                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                            Perfil
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                            Cerrar sesión
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <p>No tienes permiso para ver esta página. Por favor, inicia sesión.</p>
}

<!-- End of Topbar -->
