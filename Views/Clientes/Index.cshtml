@model IEnumerable<PyoyectoTest.Models.Clientes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CLIENTES</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Create", "Clientes")" class="btn btn-success btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Create New</span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            NOMBRE
        </th>
        <th>
            DIRECCIÓN
        </th>
        <th>
            CIUDAD
        </th>
        <th>
            TELÉFONO
        </th>
        <th>
            CÉDULA
        </th>
        <th>
            EMAIL
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.ClienteID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ClienteID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ClienteID })*@


            <a href="@Url.Action("Edit", "Clientes", new {  id = item.ClienteID })" class="btn btn-warning btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-pen"></i>
                </span>
                <span class="text">Edit</span>
            </a>

            <a href="@Url.Action("Details", "Clientes", new {  id = item.ClienteID  })" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-info-circle"></i>
                </span>
                <span class="text">Details</span>
            </a>

            <a href="@Url.Action("Delete", "Clientes", new {  id = item.ClienteID  })" class="btn btn-danger btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-trash"></i>
                </span>
                <span class="text">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
